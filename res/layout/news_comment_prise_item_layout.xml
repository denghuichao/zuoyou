<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:id="@+id/topll"
    android:orientation="vertical" >
        
     <ImageView 
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true"
        android:id="@+id/userIcon"
        android:src="@drawable/avatar_placeholder"
        android:clickable="true"
        android:gravity="center"/>
      
     <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/name"
            android:layout_alignBottom="@+id/userIcon"
            android:id="@+id/time"
            android:textSize="14dp"
            android:maxLines="1"
            android:background="@drawable/text_selector"
            android:text="DDD"/>
     
     <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_toLeftOf="@+id/shuoshuo_content"
            android:id="@+id/name"
            android:clickable="true"
            android:layout_toRightOf="@+id/userIcon"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-3dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:text=""/>
     
         <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:layout_toLeftOf="@+id/shuoshuo_content"
            android:layout_below="@+id/name"
            android:layout_alignLeft="@+id/name"
            android:id="@+id/contentText"
            android:clickable="true"
            android:textSize="15dp"
            android:singleLine="true"
            android:background="@drawable/text_selector"
            android:text=""/>

        <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_below="@+id/name"
        android:layout_alignLeft="@+id/name"
        android:id="@+id/priseImg"
        android:src="@drawable/prise"
        android:gravity="center"/>
       
      <FrameLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shuoshuo_content"
        android:layout_marginLeft="5dp"
        android:paddingLeft="2dp"
        android:background="#EAEAEA"
        android:layout_alignParentRight="true">
       <TextView android:layout_width="76dp"
            android:layout_height="56dp"
            android:id="@+id/shuoshuoText"
            android:textSize="15dp"
            android:maxLines="4"
            android:text="bhgfhgf"/>
       
        <ImageView 
	        android:layout_width="76dp"
	        android:layout_height="56dp"
	        android:scaleType="centerCrop"
	        android:layout_alignParentLeft="true"
	        android:id="@+id/shuoshuoImg"
	        android:src="@drawable/theme1"/>
       
      </FrameLayout>     
</RelativeLayout>
