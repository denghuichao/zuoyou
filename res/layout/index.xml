<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:background="#DBDBDB"
    	android:layout_height="fill_parent">
    	<FrameLayout 
    		android:id="@android:id/tabcontent"
    		android:layout_width="fill_parent"
    		android:layout_height="0.0dip"
    		android:layout_weight="1.0"/>
    	<TabWidget 
    		android:id="@android:id/tabs"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_weight="0.0"
    		android:visibility="gone"/>
    		
    	 <RadioGroup
    		android:id="@+id/main_tab"
    		android:layout_marginTop="1dp"
    		android:orientation="horizontal"
    		android:background="@color/white"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:layout_gravity="center_horizontal|bottom">
    		<RadioButton 
    			android:id="@+id/radio_button1"
    			android:onClick="tabClick" 
    			android:background="@drawable/tabbar_button3"
    			android:gravity="center_horizontal"
				android:textColor="@color/tabbar_text" 
    			style="@style/main_tab_bottom"/>

    		<RadioButton
    		    android:id="@+id/radio_button2"
    		    style="@style/main_tab_bottom"
    		    android:background="@drawable/tabbar_button2"
    		    android:onClick="tabClick"
    		    android:gravity="center_horizontal"
    		    android:textColor="@color/tabbar_text" 
    		    />
    		<RadioButton 
    			android:background="@drawable/tabbar_button1"
    			android:id="@+id/radio_button3"
    			android:onClick="tabClick" 
    			android:gravity="center_horizontal"
				android:textColor="@color/tabbar_text" 
    			style="@style/main_tab_bottom"/>
    		<RadioButton 
    			android:background="@drawable/tabbar_button4"
    			android:id="@+id/radio_button4"
    			android:onClick="tabClick"
    			android:gravity="center_horizontal" 
				android:textColor="@color/tabbar_text" 
    			style="@style/main_tab_bottom"/>
    	</RadioGroup>
    	

    	  <LinearLayout android:orientation="horizontal"
	    	android:layout_width="fill_parent"
	    	android:layout_marginTop="-48dp"
	    	android:layout_height="48dp">
    		<RelativeLayout android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:id="@+id/redpoint1"
		    	android:visibility="invisible"
		    	android:layout_weight="1">
    	     <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="20dp"
		    	android:src="@drawable/red_point"/>
    	     </RelativeLayout>
    	     <RelativeLayout android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:id="@+id/redpoint2"
		    	android:visibility="invisible"
		    	android:layout_weight="1">
    	     <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="20dp"
		    	android:src="@drawable/red_point"/>
    	     </RelativeLayout>
    	     <RelativeLayout android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:id="@+id/redpoint3"
		    	android:visibility="invisible"
		    	android:layout_weight="1">
    	     <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="20dp"
		    	android:src="@drawable/red_point"/>
    	     </RelativeLayout>
    	    <RelativeLayout android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:id="@+id/redpoint4"
		    	android:visibility="invisible"
		    	android:layout_weight="1">
    	     <ImageView android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_alignParentRight="true"
		    	android:layout_marginRight="20dp"
		    	android:src="@drawable/red_point"/>
    	     </RelativeLayout>
    	 </LinearLayout>
    </LinearLayout>
</TabHost>
