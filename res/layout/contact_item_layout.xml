<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		   android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:orientation="vertical">

    
     <RelativeLayout 
          android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	        android:layout_marginRight="3dp"
	        android:layout_marginLeft="3dp"
	        android:layout_marginTop="12dp"
	        android:layout_marginBottom="12dp"
	       android:gravity="center">
		  <ImageView
		        android:layout_width="48dp"
	            android:layout_height="48dp"
	            android:src="@drawable/logo"
				android:scaleType="centerCrop"
	            android:clickable="true"
	            android:layout_centerVertical="true"
	            android:id="@+id/userIcon"
	            android:layout_alignParentLeft="true"
		   />
		  
		  <FrameLayout android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:id="@+id/oply"
    			android:layout_centerVertical="true"
		        android:layout_marginLeft="5dp"
		         android:layout_marginRight="5dp"
   				android:layout_alignParentRight="true">
		   <LinearLayout android:layout_width="wrap_content"
    			android:layout_height="match_parent"
   				android:orientation="vertical"
   				android:id="@+id/friend_op"
   				android:gravity="center"
   				android:visibility="gone">
   			<Button android:layout_width="90dp"
   			    android:layout_height="28dp"
   			    android:background="@drawable/blue_btn_normal"
   			    android:id="@+id/suggestFriends"
   			    android:textSize="14dp"
   			    android:alpha="0.9"
   			    android:text="推荐好友"/>	
   			</LinearLayout>
   			
		     <LinearLayout android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
   				android:orientation="vertical"
   				android:layout_gravity="center"
   				android:layout_centerVertical="true"
   				android:gravity="center"
   				android:id="@+id/stranger_op">
   				<TextView android:layout_width="fill_parent"
   				    android:layout_height="wrap_content"
   				    android:gravity="center"
   				    android:singleLine="true"
   				    android:id="@+id/friendRateText"
   				    android:text="30%好友几率"
   				    android:textColor="@color/coral"
   				    android:textSize="13dp"/>
   				<Button android:layout_width="90dp"
   			   		android:layout_height="28dp"
   			    	android:background="@drawable/blue_btn_normal"
   			    	android:alpha="0.9"
   				    android:text="加好友"
   				    android:textSize="15dp"
   				    android:id="@+id/addContactButton"/>
   			</LinearLayout>
   			</FrameLayout>
		  <LinearLayout android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
   				android:orientation="vertical"
   				android:layout_marginLeft="8dp"
   				android:layout_toRightOf="@id/userIcon"
   				android:layout_toLeftOf="@id/oply" >
   				
		      	<RelativeLayout android:layout_width="fill_parent"
   				    android:layout_height="wrap_content" >
	   				<TextView android:layout_width="wrap_content"
	   				    android:layout_height="wrap_content"
	   				    android:textSize="@dimen/contact_title_text_size"
	   				    android:id="@+id/contactName"
	   				    android:layout_alignParentLeft="true"
	   				    android:singleLine="true"
	   				    android:textColor="@color/black"
	   				    android:text="20$团队 "/>
	   				<TextView android:layout_width="wrap_content"
	   				    android:layout_height="wrap_content"
	   				    android:textSize="@dimen/contact_title_text_size"
	   				    android:id="@+id/jobtitle"
						android:layout_toRightOf="@+id/contactName"
						android:layout_marginLeft="8dp"
						 android:textColor="@color/black"
	   				    android:singleLine="true"
	   				    android:text="学生"/>
	   				<TextView android:layout_width="wrap_content"
	   				    android:layout_height="wrap_content"
	   				    android:textSize="@dimen/contact_title_text_size"
	   				    android:id="@+id/distance"
						android:layout_toRightOf="@+id/jobtitle"
						android:layout_marginLeft="8dp"
	   				    android:singleLine="true"
	   				     android:textColor="@color/black"
	   				    android:text="400m"/>
   				</RelativeLayout>
   				<TextView 
        			android:id="@+id/labelView"
       			    android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:singleLine="true"
        			android:textSize="@dimen/contact_label_text_size"
        			android:layout_gravity="center" />		
   		  </LinearLayout>
	</RelativeLayout>
	 <View android:layout_height="1px"
	     android:layout_width="fill_parent"
	     android:layout_marginRight="3dp"
	     android:layout_marginLeft="3dp"
	     android:id="@+id/bottom_line"
	     android:background="#CCCCCC"/>
	</LinearLayout>


